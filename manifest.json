{
    "manifest_version": 3,
    "name": "Work Reminder",
    "version": "1.0",
    "description": "Display a notification on selected websites to remind you to get back to work.",
    "permissions": [
      "notifications",
      "storage",
      "activeTab",
      "webNavigation",
      "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "options.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  